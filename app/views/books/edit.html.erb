
<% if flash[:info] %>
	<p><%= flash[:info] %></p>
<% else flash[:notice] %>
	<p><%= flash[:notice] %></p>
<% end %>

	<div class="container">
		<div class= "row" >
			<div class="col-lg-12">
				<h1>Editing Book</h1>
					<% if @book.errors.any? %>
				  		<div id="error_explanation" class="alert alert-danger">
				    		<ul>
				      		<% @book.errors.full_messages.each do |message| %>
				       	 		<%= message %>
				     	 	<% end %>
				   	 		</ul>
				 	 	</div>
				 	<% end %>
				 	<h2>Editing Book</h2>

				 	<%= form_for(@book) do |f| %>

					<p>title</p>
					<%= f.text_field :title %>
					<p>opinion</p>
					<%= f.text_area :body %>

				<%= f.submit 'Update Book' %><br>
				<% end %>
				<%= link_to "Show", book_path(@book.id) %>|
				<%= link_to "Back", books_path %>
			</div>
		</div>
	</div>


